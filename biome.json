{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "includes": [
      "libs/**/*.js",
      "libs/**/*.ts",
      "!libs/**/dist",
      "!libs/**/coverage",
      "apps/**/*.js",
      "apps/**/*.ts",
      "!apps/**/dist",
      "!apps/**/coverage"
    ]
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "assist": {
    "enabled": false
  }
}
